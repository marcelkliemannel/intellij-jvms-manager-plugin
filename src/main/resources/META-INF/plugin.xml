<idea-plugin>
  <id>dev.turingcomplete.intellijjpsplugin</id>
  <name>Java Processes</name>
  <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

  <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

  <extensionPoints>
    <extensionPoint name="jvmAction"
                    interface="dev.turingcomplete.intellijjpsplugin.ui.detail.jvm.jvmaction.JvmAction"/>
  </extensionPoints>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService
            serviceImplementation="dev.turingcomplete.intellijjpsplugin.settings.JpsSettingsService"/>
    <applicationConfigurable
            parentId="tools"
            instance="dev.turingcomplete.intellijjpsplugin.settings.JpsSettingsConfigurable"
            id=" dev.turingcomplete.intellijjpsplugin.settings.JpsSettingsConfigurable"
            displayName="Java Processes"/>
    <toolWindow id="JPS"
                factoryClass="dev.turingcomplete.intellijjpsplugin.ui.JpsToolWindowFactory"
                anchor="bottom" canCloseContents="false" secondary="false"/>
    <notificationGroup id="JPS Plugin | Balloon" displayType="BALLOON"/>
    <notificationGroup id="JPS Plugin | Tool Window" displayType="TOOL_WINDOW" toolWindowId="JPS"/>

    <getDataRule key="dev.turingcomplete.intellijjpsplugin.currentProcessDetails"
                 implementationClass="dev.turingcomplete.intellijjpsplugin.ui.CommonsDataKeys$CurrentProcessDetailsDataRule"/>
    <getDataRule key="dev.turingcomplete.intellijjpsplugin.collectJvmProcessNodesTaskRunning"
                 implementationClass="dev.turingcomplete.intellijjpsplugin.ui.CommonsDataKeys$CollectJvmProcessNodesTaskRunningDataRule"/>
  </extensions>

  <extensions defaultExtensionNs="dev.turingcomplete.intellijjpsplugin">
    <jvmAction
            implementation="dev.turingcomplete.intellijjpsplugin.ui.detail.jvm.jvmaction.jtool.CreateJvmThreadDumpAction"/>
    <jvmAction
            implementation="dev.turingcomplete.intellijjpsplugin.ui.detail.jvm.jvmaction.jtool.GetJvmInformationAction"/>
    <jvmAction
            implementation="dev.turingcomplete.intellijjpsplugin.ui.detail.jvm.jvmaction.jtool.GarbageCollectorAction"/>
  </extensions>
</idea-plugin>